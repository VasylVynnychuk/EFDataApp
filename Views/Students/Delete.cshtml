@model EFDataApp.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h2>Czy jesteś pewien, że chcesz usunąć?</h2>
    <dl>
        <div class="rate-delete">
            <dt>
                @Html.DisplayNameFor(model => model.Imie):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Imie)
            </dd>
        </div>
        <div class="rate-delete">
            <dt>
                @Html.DisplayNameFor(model => model.Nazwisko):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nazwisko)
            </dd>
        </div>
        <div class="rate-delete">
            <dt>
                @Html.DisplayNameFor(model => model.Ulica):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ulica)
            </dd>
        </div>
        <div class="rate-delete">
            <dt>
                Kod pocztowy:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Kod_pocztowy)
            </dd>
        </div>
        <div class="rate-delete">
            <dt>
                @Html.DisplayNameFor(model => model.Miejscowosc):
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Miejscowosc)
            </dd>
        </div>
    </dl>
    <div class="buttons">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id_student" />
            <div class="form-add">
                <input type="submit" value="Usuń" class="btn btn-default" />
            </div>
        </form>
        <a asp-action="Index">Wróć do listy studentów</a>
    </div>
</div>
<footer></footer>